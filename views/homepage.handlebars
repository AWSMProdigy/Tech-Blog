<section class="container">
  <!-- If the user is logged in, render the gallery content -->
{{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each posts as |post|}}
    {{> post-details}}
    {{/each}}
  </section>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to view the posts</a>
{{/if}}